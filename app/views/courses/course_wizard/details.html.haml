= render layout: 'courses/course_wizard/step' do
  = simple_form_for @course, url: course_course_wizard_path, method: :put do |f|
    = f.input :language, collection: Course.languages, as: :radio_buttons
    = f.input :level, collection: Course.levels, as: :radio_buttons
    = f.input :price
    = f.input :published
    = f.button :submit